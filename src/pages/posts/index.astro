---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostsByYear from '../../components/PostsByYear.astro';

type BlogPost = CollectionEntry<'blog'>;
const title = 'All posts';
const description = 'Hereâ€™s where I jot down my thoughts, small learnings, and whatever else I feel like sharing.';

const posts = (await getCollection('blog')).sort((a: BlogPost, b: BlogPost) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title={title} description={description}>
	<div class='container'>
		<div class='mb-12 max-w-3xl'>
			<h1 class='text-2xl md:text-3xl font-semibold mb-4 font-mono text-earth-900 dark:text-earth-100'>{title}</h1>
			<p class='text-base text-earth-700 dark:text-earth-300 leading-relaxed'>{description}</p>
		</div>
		<PostsByYear posts={posts} />
	</div>
</BaseLayout>
